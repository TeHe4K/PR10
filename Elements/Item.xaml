<UserControl x:Class="Pr10.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pr10.Elements"
             mc:Ignorable="d" MouseDown="Speak">
    <Grid>
        <Border Margin="20" Width="220" CornerRadius="20" Background="#FF5A5A5A">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="220"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image x:Name="img" Margin="20,20,20,20"/>
                <Label x:Name="Name" Content="Наименование" Margin="10,10,0,0" Grid.Row="1" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Width="205" FontSize="16"/>
                <Label x:Name="lrice" Content="" Margin="10, 50, 10, 0" Grid.Row="1" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Width="205" FontSize="14"/>
                <Label x:Name="text" Content="" Margin="10, 90, 10, 0" Grid.Row="1" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Width="205" FontSize="14"/>
            </Grid>
            <Border.Effect>
                <DropShadowEffect BlurRadius="3"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
